# AI Security Agent Generator - Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenAI
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2023-05-15

# Google (Gemini)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here

# Groq
# Get your key at: https://console.groq.com/
GROQ_API_KEY=your-groq-api-key-here

# Together AI
# Get your key at: https://api.together.xyz/
TOGETHER_API_KEY=your-together-api-key-here

# ============================================================================
# Security Tool API Keys (Optional)
# ============================================================================

# Shodan
# Get your key at: https://account.shodan.io/
SHODAN_API_KEY=your-shodan-api-key-here

# Censys
# Get your credentials at: https://censys.io/account/api
CENSYS_API_ID=your-censys-api-id
CENSYS_API_SECRET=your-censys-api-secret

# VirusTotal
# Get your key at: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-virustotal-api-key-here

# SecurityTrails
# Get your key at: https://securitytrails.com/app/account/credentials
SECURITYTRAILS_API_KEY=your-securitytrails-api-key-here

# ============================================================================
# Secret Management (Production)
# ============================================================================

# HashiCorp Vault
VAULT_ADDR=https://vault.example.com:8200
VAULT_TOKEN=your-vault-token
VAULT_NAMESPACE=your-namespace

# AWS Secrets Manager
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# ============================================================================
# Notification Services (Optional)
# ============================================================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Telegram
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Email (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=security-agent@example.com
SMTP_TO=admin@example.com

# PagerDuty
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id

# ============================================================================
# SIEM Integration (Optional)
# ============================================================================

# Splunk
SPLUNK_HOST=splunk.example.com
SPLUNK_PORT=8088
SPLUNK_TOKEN=your-hec-token

# Elasticsearch
ELASTICSEARCH_HOST=elasticsearch.example.com
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-password

# Sumo Logic
SUMO_LOGIC_ENDPOINT=https://collectors.sumologic.com/receiver/v1/http/YOUR_TOKEN

# Datadog
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# ============================================================================
# Agent Configuration
# ============================================================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/agent.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Timeouts
REQUEST_TIMEOUT=30
SCAN_TIMEOUT=300

# Proxy (Optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# ============================================================================
# Development/Testing
# ============================================================================

# Debug Mode
DEBUG=false

# Test Mode (uses mock responses, no actual API calls)
TEST_MODE=false
